<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GirisActivity"
    android:background="#F0A732">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="133dp"
        android:layout_height="168dp"
        android:layout_below="@+id/gamezoneid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <EditText
        android:id="@+id/emailGirTextView"
        android:layout_width="357dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittextbackgorund"
        android:drawableLeft="@drawable/accountlogo"
        android:hint="E-Mail Adresinizi Giriniz"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/sifreGirTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sifreGirTextView"
        android:layout_width="357dp"
        android:layout_height="52dp"
        android:background="@drawable/edittextbackgorund"
        android:drawableLeft="@drawable/locklogo"
        android:hint="Şifrenizi Giriniz"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/gerigirisbutton"
        android:layout_width="132dp"
        android:layout_height="59dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/buttonbackground"
        android:onClick="btnGirisGeri"
        android:text="GERİ"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sifreGirTextView" />

    <Button
        android:id="@+id/devamEtButton"
        android:layout_width="130dp"
        android:layout_height="59dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/buttonbackground"
        android:onClick="btnDevamEt"
        android:text="Devam et"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sifreGirTextView" />

    <TextView
        android:id="@+id/sifremiUnuttumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="36dp"
        android:onClick="sifreUnuttum"
        android:text="Şifremi Unuttum"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sifreGirTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>